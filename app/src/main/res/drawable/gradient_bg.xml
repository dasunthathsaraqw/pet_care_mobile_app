<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient Colors -->
            <gradient
                android:angle="90"
                android:startColor="#37A0E0"
                android:endColor="#A8D3F0"
                android:type="linear"/>

            <!-- Corner Radius -->
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
